# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation
[*.{js,json,yml,yaml,html,cwl,sh}]
indent_style = space
indent_size = 2

[*.{md,Rmd,rst,mdc,txt}]
indent_style = space
indent_size = 4
